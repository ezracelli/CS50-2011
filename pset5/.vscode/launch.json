    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) copy",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "build-copy",
            "program": "${workspaceFolder}/bmp/copy",
            "args": ["smiley.bmp", "copy.bmp"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bmp",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb"
        },
        {
            "name": "(lldb) whodunit",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "build-whodunit",
            "program": "${workspaceFolder}/bmp/whodunit",
            "args": ["clue.bmp", "verdict.bmp"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bmp",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb"
        }
    ]
}